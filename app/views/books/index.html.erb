<%= render 'layouts/notice', notice: notice %>
<h1>Books</h1>

<%= render 'search_form' %>

<%= link_to 'New Book', new_book_path, class: 'btn btn-primary float-right' %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Sort</th>
      <th>Category</th>
      <th>Image</th>
      <th>Author</th>
      <th>Publish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.sort %></td>
        <td><%= category_title(book.category) %></td>
        <td>
          <% if book.image.attached? %>
          <%= image_tag book.image, style: 'max-width: 120px; display: block' %>
          <% end %>
        </td>
        <td><%= author_names(book.authors) %></td>
        <td><%= date_from_sql_to_view(book.publish_date, '%m/%d/%Y') %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="float-right">
  <%= will_paginate @books, :params => params %>
</div>
